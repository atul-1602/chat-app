{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "Simple chat application for Vercel deployment",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:full": "npm install && npm run build:frontend",
    "test": "echo \"No tests specified\" && exit 0",
    "vercel-build": "npm install && cd frontend && npm install --legacy-peer-deps && npm run build"
  },
  "keywords": ["chat", "vercel", "express", "react"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.0",
    "morgan": "^1.10.0"
  }
}
